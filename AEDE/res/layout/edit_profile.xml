<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="160dp"
        android:src="@drawable/yonghwa" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_marginLeft="160dp"
        android:src="@drawable/btn2_uploadpic" />

<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="200dp" 
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/login_regis"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="NAME :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <EditText
	                android:id="@+id/editText1"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Nickname:"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
                <EditText
	                android:id="@+id/editText2"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textvieww"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Age :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText3"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/text_tel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Telephone :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText4"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/submem_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Skill :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText5"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/comp_web"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Address :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText6"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="E-mail :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText7"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/comp_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="GPA :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText8"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Experience :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText9"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="Office :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText10"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:text="StudentID :"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <EditText
	                android:id="@+id/editText11"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:ems="10" >
            	</EditText>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
    
    <ImageView
        android:id="@+id/image_edit"
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/btn2_confrim" 
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
